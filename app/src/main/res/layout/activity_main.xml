<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@mipmap/picture1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="欢迎来到本成绩分析系统！"
            android:textColor="@android:color/white"
            android:textSize="20dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="请在下方输入你对应学科的成绩和学分"
            android:textColor="@android:color/white"
            android:textSize="10dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_weight="0.1"
        android:layout_marginTop="30dp">
        <TextView
            android:layout_width="30dp"
            android:layout_marginTop="10dp"
            android:layout_height="match_parent"
            android:textSize="20dp"
            android:text="语文"
            android:textColor="@android:color/white"/>
        <EditText
            android:hint="请输入语文成绩"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rounded_outer"
                        android:id="@+id/et_yuwen"/>
        <EditText
            android:hint="请输入语文学分"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_outer"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/et_yuwenxuefen"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_weight="0.1"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="30dp"
            android:layout_marginTop="10dp"
            android:layout_height="match_parent"
            android:textColor="@android:color/white"
            android:textSize="20dp"
            android:text="数学"
            />
        <EditText
            android:hint="请输入数学成绩"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rounded_outer"
            android:id="@+id/et_shuxue"/>
        <EditText
            android:hint="请输入数学学分"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_outer"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/et_shuxuexuefen"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="60dp"
        android:layout_weight="0.1">
        <TextView
            android:layout_width="30dp"
            android:layout_marginTop="10dp"
            android:layout_height="match_parent"
            android:textColor="@android:color/white"
            android:textSize="20dp"
            android:text="英语"/>
        <EditText
            android:hint="请输入英语成绩"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_outer"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/et_yingyu"/>
        <EditText
            android:hint="请输入英语学分"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_outer"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/et_yingyuxuefen"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:textColor="@android:color/white"
            android:textSize="20dp"
            android:text="计算机"/>
        <EditText
            android:hint="请输入计算机成绩"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_outer"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/et_jisuanji"/>
        <EditText
            android:hint="请输入计算机学分"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_outer"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/et_jisuanjixuefen"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_weight="0.5"
        android:layout_marginTop="40dp">

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:text="生成分析"
            android:textColor="@android:color/black" />
    </LinearLayout>

</LinearLayout>