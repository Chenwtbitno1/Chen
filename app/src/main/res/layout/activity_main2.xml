<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@mipmap/picture1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_weight="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="以下是您本次考试的成绩分析"
            android:textColor="@android:color/white"
            android:textSize="20dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:text="成绩"
            android:textSize="20dp"
            android:layout_marginLeft="130dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:text="学分"
            android:textSize="20dp"
            android:layout_marginLeft="80dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="1">

        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:textColor="@android:color/white"
            android:textSize="20dp"
            android:text="语文"
            android:gravity="center"
            />
        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:id="@+id/yuwen"
            android:textColor="@android:color/black"
            android:background="@drawable/rounded_outer"
            android:gravity="center"/>

        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:id="@+id/yuwenxuefen"
            android:textColor="@android:color/black"
            android:background="@drawable/rounded_outer"
            android:gravity="center"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/yuwendengji"
            android:textColor="@android:color/white"
            android:layout_marginLeft="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp">
        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:textColor="@android:color/white"
            android:textSize="20dp"
            android:text="数学"
            android:gravity="center"
            />
        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:id="@+id/shuxue"
            android:textColor="@android:color/black"
            android:background="@drawable/rounded_outer"
            android:gravity="center"/>

        <TextView
            android:layout_width="100dp"
            android:layout_marginLeft="20dp"
            android:layout_height="match_parent"
            android:id="@+id/shuxuexuefen"
            android:textColor="@android:color/black"
            android:background="@drawable/rounded_outer"
            android:gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/shuxuedengji"
            android:textColor="@android:color/white"
            android:layout_marginLeft="20dp"/>
    </LinearLayout>  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_weight="1"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="10dp">
    <TextView
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:text="英语"
        android:gravity="center"
        />
    <TextView
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:id="@+id/yingyu"
        android:textColor="@android:color/black"
        android:background="@drawable/rounded_outer"
        android:gravity="center"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:id="@+id/yingyuxuefen"
        android:textColor="@android:color/black"
        android:layout_marginLeft="20dp"
        android:background="@drawable/rounded_outer"
        android:gravity="center"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/yingyudengji"
        android:textColor="@android:color/white"
        android:layout_marginLeft="20dp"/>
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp">
        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:textColor="@android:color/white"
            android:textSize="20dp"
            android:gravity="center"
            android:text="计算机"
            />

        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:id="@+id/jisuanji"
            android:textColor="@android:color/black"
            android:background="@drawable/rounded_outer"
            android:gravity="center"/>
        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:id="@+id/jisuanjixuefen"
            android:layout_marginLeft="20dp"
            android:textColor="@android:color/black"
            android:background="@drawable/rounded_outer"
            android:gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:id="@+id/jisuanjidengji"
            android:textColor="@android:color/white"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:textColor="@android:color/white"
            android:textSize="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="20dp"
            android:text="综合成绩"
            android:gravity="center"
            />
        <TextView
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:textColor="@android:color/white"
            android:textSize="20dp"
            android:text="综合评级"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:textColor="@android:color/white"
            android:textSize="20dp"
            android:text="稳定性"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_weight="2">
        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:textColor="@android:color/black"
            android:textSize="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="20dp"
            android:text=""
            android:background="@drawable/rounded_outer"
            android:id="@+id/zonghechengji"/>
        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:textColor="@android:color/black"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/rounded_outer"
            android:id="@+id/zonghepingji"/>
        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:textColor="@android:color/black"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/rounded_outer"
            android:id="@+id/wendingxing"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_weight="0.5">
        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:textColor="@android:color/black"
            android:text="生成报告" />
    </LinearLayout>
</LinearLayout>



